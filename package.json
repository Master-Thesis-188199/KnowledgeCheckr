{
  "name": "knowledgecheckr",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "semantic-release": "semantic-release",
    "dev": "next dev --turbopack",
    "-------- build & start --------": "--------",
    "instrument-code": "cp ./config/.babelrc.json .babelrc.json",
    "de-instrument-code": "rm -rf .babelrc.json",
    "                                                                                                   ": "",
    "prebuild:instrumented": "npm run instrument-code",
    "build:instrumented": "next build",
    "postbuild:instrumented": "yarn postbuild && yarn de-instrument-code",
    "                                                                                                    ": "",
    "build": "next build",
    "postbuild": "cp -r public .next/standalone/ && cp -r .next/static .next/standalone/.next/",
    "                                                                                                     ": "",
    "prestart": "npm run validateEnvironment",
    "start": "node .next/standalone/server.js",
    "                                                                                                        ": "",
    "build-start": "npm run build && npm run start & wait-on tcp:3000",
    "build-start:instrumented": "npm run build:instrumented && npm run start & wait-on tcp:3000",
    "-------- test scripts --------": "--------",
    "test:component": "yarn instrument-code && cypress run --component && yarn de-instrument-code",
    "test:e2e": "cypress run",
    "test:components": "cypress run --component",
    "                                                                                                      ": "",
    "test:component-standalone": "yarn build-start:instrumented && yarn test:component",
    "                                                                                                       ": "",
    "test": "yarn build-start:instrumented && npm run test:component && npm run test:e2e && yarn de-instrument-code && yarn test:cleanup-test-data",
    "test:parallel": "yarn build-start:instrumented && cypress-parallel -s test:e2e -t 8 -d 'src/tests/e2e/**/*.tsx' && yarn test:terminate-server && cypress-parallel -s test:components -t 8 -d 'src/tests/components/**/*.tsx' && yarn test:cleanup-test-data",
    "test:terminate-server": "kill -9 $(lsof -ti:3000)",
    "test:cleanup-test-data": "tsx database/cleanup/cleanup-test-data.ts",
    "-------- test scripts (end) --------": "--------",
    "cy:open": "yarn instrument-code && next dev & cypress open",
    "production": "yarn build-start",
    "validateEnvironment": "ts-node -P tsconfig.env.json src/lib/Shared/Env.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "@babel/runtime": "^7.27.0",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@heroui/system": "^2.4.12",
    "@heroui/theme": "^2.4.12",
    "@heroui/tooltip": "^2.2.13",
    "@hookform/resolvers": "^4.1.3",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-checkbox": "^1.2.2",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.10",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "better-auth": "^1.2.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.7",
    "framer-motion": "^12.6.2",
    "lodash": "^4.17.21",
    "lucide-react": "^0.553.0",
    "mongodb": "^6.14.2",
    "motion": "^12.4.7",
    "mysql2": "^3.14.0",
    "nanoid": "^5.1.5",
    "next": "^16.0.1",
    "nookies": "^2.5.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.55.0",
    "react-textarea-autosize": "^8.5.9",
    "react-toastify": "^11.0.5",
    "semantic-release": "^24.2.3",
    "server-only": "^0.0.1",
    "swapy": "^1.0.5",
    "tailwind-merge": "^3.0.2",
    "tw-animate-css": "^1.2.5",
    "use-breakpoint": "^4.0.6",
    "uuid": "^11.1.0",
    "vaul": "^1.1.2",
    "zod": "^3.24.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@cypress/code-coverage": "^3.13.12",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/lodash": "^4.17.17",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-istanbul": "^7.0.0",
    "cypress": "15.7.0",
    "cypress-multi-reporters": "^2.0.5",
    "cypress-parallel": "^0.15.0",
    "cypress-real-events": "^1.14.0",
    "cypress-social-logins": "^1.14.2",
    "cypress-terminal-report": "^7.3.3",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9",
    "eslint-config-next": "15.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.4.3",
    "prettier": "3.5.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "wait-on": "^8.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
